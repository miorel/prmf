<project>

    <target name="clean">
        <delete dir="bin"/>
    	<delete dir="dist"/>
    </target>

    <target name="compile">
        <mkdir dir="bin"/>
        <javac srcdir="src" destdir="bin"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="dist"/>
        <jar destfile="dist/MafiaBot.jar" basedir="bin">
            <manifest>
                <attribute name="Main-Class" value="com.googlecode.prmf.starter.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">

   	 <copy file="src/com/googlecode/prmf/starter/settings.txt" tofile="settings.txt"/>
        <java jar="dist/MafiaBot.jar" fork="true"/>
    	 <copy file="src/com/googlecode/prmf/starter/settings.txt" tofile="settings.txt"/>
    </target>

</project>

